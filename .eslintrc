{
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true
    },
    "extends": ["eslint:recommended", "airbnb"],
    "rules": {
      "strict": [2, "global"],
      "no-undef": 2,
      "no-console": 0,
      "arrow-parens": [0, "as-needed"],
      "jsx-quotes": 2,
    },
    "plugins": ["react", "flowtype"],
    "settings": {
      "react": {
        "pragma": "React",  // Pragma to use, default to "React"
        "version": "15.0" // React version, default to the latest React stable release
      }
    },
    "globals": {
        "it": true,
        "describe": true,
        "Generator": true,
        "persistence": true,
    },
    "parserOptions": {
      "sourceType": "module"
    }
}
